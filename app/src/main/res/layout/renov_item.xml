<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="224dp">

            <TextView
                android:id="@+id/itmTitle"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="237dp"
                android:layout_marginRight="237dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Title"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

            <TextView
                android:id="@+id/itmSubject"
                android:layout_width="94dp"
                android:layout_height="41dp"
                android:layout_above="@+id/itmaddress"
                android:layout_below="@+id/itmTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="85dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:text="Subject"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="81dp"
                android:layout_height="52dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/imgv"
                android:layout_width="48dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="168dp"
                android:layout_toEndOf="@+id/imgp"
                app:srcCompat="@android:drawable/presence_video_away"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imgp"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="163dp"
                android:layout_toEndOf="@+id/itmSubject"
                app:srcCompat="@android:drawable/ic_menu_set_as"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="240dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="176dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="67dp"
                android:text="Answer"
                android:textSize="34sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/itmaddress"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_above="@+id/tvAnswer"
                android:layout_marginBottom="14dp"
                android:text="Address" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>